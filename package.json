{
  "name": "schoolmaster",
  "private": true,
  "packageManager": "npm@11.6.2",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:apps": "turbo run dev --filter=@schoolmaster/api --filter=@schoolmaster/web",
    "dev:api": "npm run --workspace @schoolmaster/api dev",
    "dev:web": "npm run --workspace @schoolmaster/web dev",
    "dev": "npm run dev:apps",
    "db:up": "docker compose -f infra/docker/docker-compose.dev.yml up -d postgres",
    "db:migrate": "dotenv -e .env -- node scripts/wait-for-db.js && dotenv -e .env -- npm run --workspace @schoolmaster/api prisma:deploy",
    "db:seed": "dotenv -e .env -- npm run --workspace @schoolmaster/api seed",
    "dev:bootstrap": "bash ./scripts/dev-bootstrap.sh",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "seed": "turbo run seed --filter=api",
    "format": "turbo run format"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "esbuild": "0.27.1"
  }
}
