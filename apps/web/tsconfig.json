{
  "extends": "../../packages/config/tsconfig.shared.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
    "incremental": true,
    "paths": {
      "@schoolmaster/core": [
        "../../packages/core/src"
      ]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
