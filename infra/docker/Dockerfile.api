FROM node:20-alpine
WORKDIR /app
COPY package.json package-lock.json* turbo.json tsconfig.base.json ./
COPY packages ./packages
COPY apps/api ./apps/api
RUN npm install --omit=dev && npm install --prefix apps/api --omit=dev
RUN npm run --workspace @schoolmaster/api build
EXPOSE 3001
CMD ["node", "apps/api/dist/main.js"]
